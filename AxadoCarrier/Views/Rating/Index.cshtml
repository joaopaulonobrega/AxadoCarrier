@model IEnumerable<AxadoCarrier.ViewModels.RatingViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Classificações</h2>

<p>
    @Html.ActionLink("Nova Classificação", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<div class="text-center">
    <ul class="pagination">

        @{

            for (var i = 1; i <= ViewBag.TotalPages; i++)
            {
                var pagina = Request.QueryString["page"];

                var routeValue = new RouteValueDictionary();
                routeValue.Add("page", i.ToString());

                var index = Request.QueryString["page"] as string;

                <li class="@if (index.Equals(i.ToString())) { @Html.Raw("active") } ">@Html.ActionLink(i.ToString(), "Index", "Rating", routeValue, null)</li>
            }
        }

    </ul>
</div>