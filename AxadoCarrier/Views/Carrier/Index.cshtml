@model IEnumerable<AxadoCarrier.ViewModels.CarrierViewModel>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Transportadoras</h2>

<p>
    @Html.ActionLink("Nova Transportadora", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CpfCnpj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeRazao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RgIe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CEP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CpfCnpj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeRazao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RgIe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CEP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UF)
        </td>  
        <td>
            @Html.DisplayFor(modelItem => item.Ativa)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>

   
}
    
</table>
<div class="text-center">
    <ul class="pagination">

        @{

            for (var i = 1; i <= ViewBag.TotalPages; i++)
            {
                var pagina = Request.QueryString["page"];

                var routeValue = new RouteValueDictionary();
                routeValue.Add("page", i.ToString());

                var index = Request.QueryString["page"] as string;

                <li class="@if (index.Equals(i.ToString())) { @Html.Raw("active") } ">@Html.ActionLink(i.ToString(), "Index", "Carrier", routeValue, null )</li>
            }
        }
       
    </ul>
</div>